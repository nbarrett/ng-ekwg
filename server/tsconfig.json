{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "lib": [
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./ts-gen/",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "serenity-js/**/*.ts",
    "lib/**/*.*"
  ]
}
