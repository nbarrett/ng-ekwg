{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "downlevelIteration": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "ts-gen",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "..node_modules",
    "node_modules"
  ],
  "include": [
    "serenity-js/**/*.ts",
    "lib/**/*.*",
    "../projects/ngx-ramblers/src/app/models/**/*.*"
  ]
}
